{
  "name": "repo-love",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "thenationofalex",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/thenationofalex/repo-love"
  },
  "scripts": {
    "build": "tsc",
    "commitmsg": "./node_modules/.bin/commitlint -e $GIT_PARAMS",
    "dev": "ts-node src/index.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@slack-wrench/jest-mock-web-client": "^1.2.0",
    "@types/jest": "^26.0.7",
    "@types/lodash": "^4.14.158",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.0.25",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "nock": "^13.0.3",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@octokit/core": "^3.1.1",
    "@slack/web-api": "^5.11.0",
    "dotenv-defaults": "^2.0.0",
    "lodash": "^4.17.19"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "rules": {
      "body-leading-blank": [
        1,
        "always"
      ],
      "footer-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        72
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  }
}
