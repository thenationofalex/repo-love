{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "esnext",
      "es2015.iterable",
      "scripthost",
    ],
    "skipLibCheck": true,
    "pretty": true
  },
  "exclude": [
    "tests",
    "node_modules",
  ],
  "include": [
    "__mocks__/@slack/web-api.ts",
    "src/**/*.ts"
  ]
}
