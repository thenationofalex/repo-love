{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "esnext",
      "es2015.iterable",
      "scripthost",
    ],
    "skipLibCheck": true,
    "pretty": true
  },
  "exclude": [
    "tests",
    "node_modules",
  ]
}
